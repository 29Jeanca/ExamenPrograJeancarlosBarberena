@model IEnumerable<Profesores>
@{
    ViewData["Profesores"] = "Profesores";
}
  
    <h2>Buscar</h2>
    <form asp-action="Buscar">
        <input type="text" name="texto" id="texto"></input>
        <button type="submit">Buscar</button>
    </form>
    <h2>Profesores</h2>

@foreach (var item in Model)
{
    <h3><a asp-action="VerProfesor" asp-route-id="@item.ID">
    @item.nombreCompletoProfesor
    </a></h3>
  <h2>@item.areaConocimiento</h2>
 

   <a class="btn-primary btn" style="background-color:brown" asp-action="VerEstudiante">Página Estudiantes</a>

}